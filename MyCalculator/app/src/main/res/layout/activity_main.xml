<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apptwo.googleknight.learn.mycalculator.MainActivity">


    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="7"
        android:id="@+id/button7"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="8"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="9"
        android:id="@+id/button9"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="6"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="1"
        android:id="@+id/button1"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="2"
        android:id="@+id/button2"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="3"
        android:id="@+id/button3"
        android:layout_below="@+id/button5"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="0"
        android:id="@+id/button0"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="+"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="-"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="*"
        android:id="@+id/button12"
        android:layout_below="@+id/button13"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="/"
        android:id="@+id/button13"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="."
        android:id="@+id/button14"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button0" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="="
        android:id="@+id/button15"
        android:layout_alignTop="@+id/button14"
        android:layout_toEndOf="@+id/button14" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80sp"
        android:text="0"
        android:id="@+id/textView"
        android:editable="true"
        android:textSize="@dimen/abc_action_button_min_width_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="DEL"
        android:id="@+id/delbutton"
        android:layout_above="@+id/button11"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="CLR"
        android:id="@+id/clrbutton"
        android:layout_below="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="mod"
        android:id="@+id/modbutton"
        android:layout_above="@+id/button12"
        android:layout_toEndOf="@+id/button12" />
</RelativeLayout>
